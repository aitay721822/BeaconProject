<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Create.AttendFirstStep">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/gradient"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/information_512px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="請先輸入活動資訊\t (1/3)"
                    android:textColor="@color/whiteText"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:text="活動名稱 / Activaty Name"/>
                <EditText
                    android:gravity="left"
                    android:layout_marginTop="0dp"
                    android:outlineSpotShadowColor="@color/whiteText"
                    android:id="@+id/activatyName"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:backgroundTint="@color/grayText"
                    android:textColorHint="@color/grayText"
                    android:textColor="@color/grayText"
                    android:hint="請輸入活動名稱，不可重複"
                    android:inputType="text" />

                <TextView
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:text="地點 / Location"/>
                <EditText
                    android:gravity="left"
                    android:layout_marginTop="0dp"
                    android:outlineSpotShadowColor="@color/whiteText"
                    android:id="@+id/location"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:backgroundTint="@color/whiteText"
                    android:textColorHint="@color/grayText"
                    android:textColor="@color/whiteText"
                    android:hint="請輸入活動地點..."
                    android:inputType="text" />

                <TextView
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:text="開始日期 / Start Date"/>
                <EditText
                    android:gravity="left"
                    android:layout_marginTop="0dp"
                    android:outlineSpotShadowColor="@color/whiteText"
                    android:clickable="true"
                    android:id="@+id/startDate"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:backgroundTint="@color/whiteText"
                    android:textColorHint="@color/grayText"
                    android:textColor="@color/whiteText"
                    android:hint="請輸入活動舉辦日期..."
                    android:focusable="false"
                    android:inputType="date" />

                <TextView
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:text="開始時間 / Start Time"/>
                <EditText
                    android:gravity="left"
                    android:layout_marginTop="0dp"
                    android:outlineSpotShadowColor="@color/whiteText"
                    android:id="@+id/startTime"
                    android:clickable="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:focusable="false"
                    android:backgroundTint="@color/whiteText"
                    android:textColorHint="@color/grayText"
                    android:textColor="@color/whiteText"
                    android:hint="請輸入活動開始時間..."
                    android:inputType="time" />
                <TextView
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:text="結束日期 / End Date"/>
                <EditText
                    android:gravity="left"
                    android:layout_marginTop="0dp"
                    android:outlineSpotShadowColor="@color/whiteText"
                    android:id="@+id/endDate"
                    android:clickable="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:focusable="false"
                    android:backgroundTint="@color/whiteText"
                    android:textColorHint="@color/grayText"
                    android:textColor="@color/whiteText"
                    android:hint="請輸入活動結束日期..."
                    android:inputType="date" />
                <TextView
                android:layout_gravity="left"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:text="結束時間 / End Time"/>
                <EditText
                    android:gravity="left"
                    android:layout_marginTop="0dp"
                    android:outlineSpotShadowColor="@color/whiteText"
                    android:id="@+id/endTime"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:focusable="false"
                    android:backgroundTint="@color/whiteText"
                    android:textColorHint="@color/grayText"
                    android:textColor="@color/whiteText"
                    android:hint="請輸入活動結束時間..."
                    android:inputType="time" />
                <TextView
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteText"
                    android:text="備註"/>
                <EditText
                    android:gravity="left"
                    android:layout_marginTop="0dp"
                    android:outlineSpotShadowColor="@color/whiteText"
                    android:id="@+id/note"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:backgroundTint="@color/whiteText"
                    android:textColorHint="@color/grayText"
                    android:textColor="@color/whiteText"
                    android:hint="請輸入備註..."
                    android:inputType="textEmailAddress" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="8.8"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/hollowbutton_bg"
                android:onClick="previousStep"
                android:text="返回"
                android:textColor="@drawable/hollowbutton_text"
                android:textSize="16sp" />
            <Button
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/hollowbutton_bg_inverse"
                android:onClick="nextStep"
                android:text="開始建立活動"
                android:textColor="@drawable/hollowbutton_text_inverse"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>