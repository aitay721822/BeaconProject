<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="編輯簽到狀態"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名 / Name"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:focusable="false"
            android:hint="顯示姓名"
            android:id="@+id/showNameStatus"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/changeIsCheckIn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="已簽到"
            android:background="@drawable/hollowbutton_bg_inverse"
            android:textColor="@drawable/hollowbutton_text_inverse"/>
        <Button
            android:layout_centerInParent="true"
            android:id="@+id/viewDetails"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="詳細資料"
            android:background="@drawable/hollowbutton_bg"
            android:textColor="@drawable/hollowbutton_text"/>
        <Button
            android:layout_alignParentLeft="true"
            android:id="@+id/changeNotCheckIn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="未簽到"
            android:background="@drawable/hollowbutton_bg_inverse_attency"
            android:textColor="@drawable/hollowbutton_text_inverse"/>
    </RelativeLayout>
</LinearLayout>